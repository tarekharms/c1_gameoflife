<Window x:Class="c1_gameoflife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:c1_gameoflife"
        mc:Ignorable="d"
        Title="Game Of Life" Height="450" Width="800">
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="28*"/>
			<RowDefinition Height="3*"/>
			<RowDefinition Height="3*"/>
		</Grid.RowDefinitions>

		<Rectangle Grid.Row="0" Grid.ColumnSpan="9">
			<Rectangle.Fill>
				<SolidColorBrush Color="LightGreen" />
			</Rectangle.Fill>
		</Rectangle>

		<Canvas x:Name="Cnvs_Spielfeld">
			
		</Canvas>

		<StackPanel Grid.Row="0"
					Grid.Column="0"
					Grid.ColumnSpan="9">

			<TextBlock x:Name="PlayStatus"
					   Text="Status: Play"/>

			<TextBlock x:Name="Generation"
					   Text="Generation: 0"/>


		</StackPanel>

		<Button Grid.Column="0"
				Grid.Row="1"
				Grid.ColumnSpan="2"
				Grid.RowSpan="2"
				Content="Play/Pause"
				Panel.ZIndex="2"
				Margin="10 20 10 20"
				Click="Button_PlayPause_Click"/>
		

		<Rectangle Grid.Row="1" 
				   Grid.Column="0"
				   Grid.ColumnSpan="2"
		>
			<Rectangle.Fill>
				<SolidColorBrush Color="LightBlue" />
			</Rectangle.Fill>
		</Rectangle>

		<Button Grid.Column="2"
				Grid.Row="1"
				Grid.RowSpan="2"
				Content="->"
				Panel.ZIndex="2"
				Margin="10 20 10 20"
				Click="Button_Einzelschritt_Click"/>
		

		<Rectangle Grid.Row="1" 
				   Grid.Column="2"
		>
			<Rectangle.Fill>
				<SolidColorBrush Color="LightCoral" />
			</Rectangle.Fill>
		</Rectangle>
		
		<Button Grid.Column="3"
				Grid.Row="1"
				Grid.RowSpan="2"
				Content="Reset"
				Panel.ZIndex="2"
				Margin="10 20 10 20"
				Click="Button_Reset_Click"/>


		<Rectangle Grid.Row="1" 
				   Grid.Column="3"
		>
			<Rectangle.Fill>
				<SolidColorBrush Color="LightCyan" />
			</Rectangle.Fill>
		</Rectangle>

		<Button Grid.Column="4"
				Grid.Row="1"
				Grid.RowSpan="2"
				Content="Speichern"
				Panel.ZIndex="2"
				Margin="10 20 10 20"
				Click="Button_Speichern_Click"/>


		<Rectangle Grid.Row="1" 
				   Grid.Column="4"
		>
			<Rectangle.Fill>
				<SolidColorBrush Color="LightGray" />
			</Rectangle.Fill>
		</Rectangle>

		<Button Grid.Column="5"
				Grid.Row="1"
				Grid.RowSpan="2"
				Content="Laden"
				Panel.ZIndex="2"
				Margin="10 20 10 20"
				Click="Button_Laden_Click"/>


		<Rectangle Grid.Row="1" 
				   Grid.Column="6"
				   Grid.ColumnSpan="2"
		>
			<Rectangle.Fill>
				<SolidColorBrush Color="LightBlue" />
			</Rectangle.Fill>
		</Rectangle>

		<TextBlock x:Name="Lbl_Geschwindigkeit"
				   Grid.Column="6"
				   Grid.Row="2"
				   Grid.ColumnSpan="2"
				   Text="Geschwindigkeit: 50"
				   Margin="10 0 10 10"
				   Panel.ZIndex="2"/>

		<Slider Grid.Column="6"
				Grid.Row="1"
				Grid.ColumnSpan="2"
				Panel.ZIndex="2"
				Margin="10 15 10 5"
				Maximum="100"
				Minimum="0"
				Value="50"
				ValueChanged="Slider_Geschwindigkeit_Changed"/>


		<Rectangle Grid.Row="1" 
				   Grid.Column="8"
		>
			<Rectangle.Fill>
				<SolidColorBrush Color="LightCoral" />
			</Rectangle.Fill>
		</Rectangle>

		<Button Grid.Column="8"
				Grid.Row="1"
				Grid.RowSpan="2"
				Content="Info"
				Panel.ZIndex="2"
				Margin="10 20 10 20"/>

	</Grid>
</Window>
